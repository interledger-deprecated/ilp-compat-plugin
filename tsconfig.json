{
    "compilerOptions": {
        "target": "es2015",
        "outDir": "dist",
        "module": "commonjs",
        "declaration": true,
        "noImplicitAny": true,
        "removeComments": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "inlineSources": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true
    },
    "compileOnSave": true,
    "include": [
        "src/**/*.ts"
    ]
}
